{
  "name": "cesizen",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "create-admin": "tsx scripts/create-admin.ts",
    "seed": "tsx prisma/seed.ts",
    "security-test": "node security/security-tests.js",
    "security-test-ps": "powershell -ExecutionPolicy Bypass -File security/security-test.ps1",
    "docker:dev": "docker-compose up -d",
    "docker:dev:build": "docker-compose up -d --build",
    "docker:dev:stop": "docker-compose down",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml --env-file .env.docker up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml --env-file .env.docker up -d --build",
    "docker:prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
